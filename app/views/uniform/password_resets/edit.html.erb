<% 
	msg = 'Update your password'
	title msg
	header msg
 %>


<p>Hello <%= @user %>, enter in your new password, and we'll reset it for you.</p>


<% semantic_form_for @user, :url => password_reset_path, :method => :put do |f| %>
  
	<% f.inputs do %>

		<%= f.input :password %>
		<%= f.input :password_confirmation %>
	<% end %>

	<% f.buttons do %>
		<%= f.commit_button 'Update my password and log me in' %>
	<% end %>

<% end %>
