<% 
	msg = 'Update your password'
	title msg
	header msg
 %>


<p>Hello <%= @user %>, enter in your new password, and we'll reset it for you.</p>


<% semantic_form_for @user, :url => password_reset_path, :method => :put do |f| %>
  
	<%= f.error_messages %>
	<%= f.label :password %><br />
	<%= f.password_field :password %><br />
	<br />
	<%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation %><br />

	<%= f.submit "Update my password and log me in" %>

<% end %>