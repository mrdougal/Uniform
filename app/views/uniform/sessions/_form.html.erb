<% semantic_form_for @session, :url => session_path do |f| %>
	
	<% f.inputs do %>
		<%= f.input :email, 
					:required => true %>

		<%= f.input :password,
					:required => true %>

	<% end %>

	<% f.buttons do %>
		<%= f.commit_button 'Login' %>
	<% end %>
<% end %>


<%= link_to 'Forgotten your password?', new_password_reset_path %>