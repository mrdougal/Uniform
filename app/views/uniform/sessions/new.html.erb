<% 

	# We have the form in a partial, as not everything on this page will be relevant to all websites.
	# eg: the control site, doesn't have a signup path, or a checkout path
	
	msg = 'Please login'
	title msg
	header msg
	 %>


<%= render :partial => 'uniform/sessions/form' %>
<%= link_to 'Forgotten your password?', new_password_reset_path %>

<% content_for :side do %>

<div class="note">
	Before you can login, you need to have 
	<%= link_to('registered',signup_path, {
		:title => "Go to the signup page" 
	}) %> first.
</div>


<!-- Display message telling users that we will redirect them -->
<%= content_tag :div, t('login.return_user_to_checkout'), { :class => 'note'} if will_return_user_to_checkout? %>


<% end %>
