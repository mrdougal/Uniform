<% 
	msg = 'Please login'
	title msg
	header msg
	 %>



<% semantic_form_for @session, :url => session_path do |f| %>
	
	<% f.inputs do %>
		<%= f.input :email, 
					:required => true %>

		<%= f.input :password,
					:required => true %>

	<% end %>

	<% f.buttons do %>
		<%= f.commit_button 'Login' %>
	<% end %>
<% end %>


<% content_for :side do %>

<div class="note">
	Before you can login, you need to have 
	<%= link_to('registered',signup_path, {
		:title => "Go to the signup page" 
	}) %> first.
</div>


	<!-- Display message telling users that we will redirect them -->
	<%= content_tag :div, t('login.return_user_to_checkout'), { :class => 'note'} if will_return_user_to_checkout? %>


<% end %>
